@model ELAKIL.Business.Entities.Order
@{
    Layout = "_Print";
    ViewBag.Title = "Print Order";
}
<div style="text-align:center">
    <h1>ELAKIL</h1>
</div>


    <dl style="display:inline-block;float:right">
        <dt>Name</dt>
        <dd>@Model.UserProfile.Name</dd>
        <dt>Phone</dt>
        <dd>@Model.Phone</dd>
        <dt>Governorate</dt>
        <dd>@Model.Governorate</dd>
        <dt>Order</dt>
        <dd>@Model.OrderDate.ToShortDateString()</dd>
    </dl>
    <dl style="display:inline-block;float:left">
        <dt>Address</dt>
        <dd>@Model.Address</dd>
        <dt>Station</dt>
        <dd>@Model.Station</dd>
        <dt>Phone 2</dt>
        <dd>@Model.AnotherPhone</dd>
        <dt>Deliver</dt>
        <dd>@Model.DeliverDate?.ToShortDateString()</dd>
    </dl>

   
    <div class="row mt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>QTN</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderLines)
                {
                    <tr>
                        <td>@item.Meal.Name</td>
                        <td>@item.Meal.Price.ToString("n2")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Quantity*item.Meal.Price).ToString("n2"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row mt-3">
        <div class="row">


            <div class="col">
                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Total</label>
                    <div class="col-sm-10">
                        <input class="form-control" readonly value="@(Model.OrderLines.Sum(a=>a.Meal.Price*a.Quantity).ToString("n2"))" />
                    </div>

                </div>
            </div>
        </div>
    </div>








