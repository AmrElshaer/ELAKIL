@if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
{
    @inject IUserProfileService userProfileService
    @inject IUserCartItemService _userCartItemService
    var userProfileId = await userProfileService.GetUserProfileIdAsync(User.Identity.Name);
    var cartCount = (await _userCartItemService.GetUserCartItemsAsync(userProfileId)).Count();
    @*<li><a style="font-size: 20px;" class="nav-link scrollto" asp-area="" asp-fragment="" asp-route-Id="@userProfileId" asp-controller="Home" asp-action="CheckOut"><i class="bi bi-cart" style="font-size: 80%;"></i><span class="badge-pill" style="background-color: #cda45e;">@cartCount</span></a></li>*@

    <a class="nav-link scrollto cart-btn" asp-area="" asp-fragment="" asp-route-Id="@userProfileId" asp-controller="Home" asp-action="CheckOut">
        <i class="bi bi-cart"></i>
        <span class="badge-pill badge-light">@cartCount</span>
    </a>
}