                            <div class="col-lg-6 menu-item filter-@cats[item.CategoryId].ToLower()">
                                <img src="@item.Image" class="menu-img" alt="">
                                <div class="menu-content">
                                    <a asp-route-Id="@item.Id" asp-action="ItemDetail">@item.Name</a><span>$@item.Price</span>
