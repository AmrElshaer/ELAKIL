@model ELAKIL.Business.Entities.Meal
@inject IMealService mealService

<main id="main">
    <section class="breadcrumbs">
        <div class="container" data-aos="fade-up">

            <div class="d-flex justify-content-between align-items-center">
                <a href="#">Item</a>
                <ol>
                    <li><a href="/">Home</a></li>
                    <li>Item</li>
                </ol>
            </div>

        </div>
    </section>
    <section class="container" data-aos="fade-up">
        
        <div class="row container">
            <div class="col-8" id="scoped-content">
                <style>
                    dt, dd {
                        display: block;
                        float: left;
                        margin-bottom: 20px;
                    }

                    dt {
                        clear: both;
                    }
                </style>
                <dl class="row mt-5">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.Name)
                    </dd>
                </dl>
                <form action="/Home/AddItemToCart/" method="post" class="form-inline mb-5">
                    <input name="id" type="hidden" value="@Model.Id" />
                    <label class="sr-only" for="inlineFormInputGroupUsername2">QTN</label>
                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">QTN</div>
                        </div>
                        <input type="number" name="quantinty" class="form-control" id="inlineFormInputGroupUsername2">
                    </div>
                    <button type="submit" class="btn btn-outline-warning mb-2"><i class="bi bi-cart"></i></button>
                </form>
                <div>
                    <a asp-action="Index"><i class="bi bi-arrow-left"></i> Go Back</a>
                </div>
            </div>
            <div class="col-4">
                <img src="@Html.DisplayFor(model => model.Image)" />
            </div>
         
           

        </div>
        
    </section>
</main>
     

